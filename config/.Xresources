! Xresources configuration for st
! Generated by mint-dwm config

! Fonts
! 终端字体
st.font: JetBrainsMono Nerd Font Propo:style=Bold:size=14:pixelsize=14:antialias=true:autohint=true

! Colors
! 终端背景色
st.background: #0d1416
! 终端前景色(文字)
st.foreground: #c5d9dc
! 终端光标颜色
st.cursorColor: #60DEEC

! Normal colors
! 黑色
st.color0: #0d1416
! 红色
st.color1: #ff5555
! 绿色
st.color2: #50fa7b
! 黄色
st.color3: #f1fa8c
! 蓝色
st.color4: #bd93f9
! 洋红色
st.color5: #ff79c6
! 青色
st.color6: #60DEEC
! 白色
st.color7: #bbbbbb

! Bright colors
! 亮黑色
st.color8: #44475a
! 亮红色
st.color9: #ff5555
! 亮绿色
st.color10: #50fa7b
! 亮黄色
st.color11: #f1fa8c
! 亮蓝色
st.color12: #bd93f9
! 亮洋红色
st.color13: #ff79c6
! 亮青色
st.color14: #60DEEC
! 亮白色
st.color15: #ffffff

! Misc
! 透明度 (0.0-1.0, 需要 Compton/Picom 支持)
st.alpha: 0.8
! 边框像素宽度
st.borderpx: 2

! dwm settings
! 字体设置
dwm.font: JetBrainsMono Nerd Font Propo:style=Bold:size=14:pixelsize=14:antialias=true:autohint=true
dwm.dmenufont: JetBrainsMono Nerd Font Propo:style=Bold:size=14:pixelsize=14:antialias=true:autohint=true
dwm.statusfont: JetBrainsMono Nerd Font Propo:style=Bold:size=14:pixelsize=14:antialias=true:autohint=true
dwm.tagsfont: JetBrainsMono Nerd Font Propo:style=Bold:size=16:pixelsize=16:antialias=true:autohint=true

! 颜色设置
! 普通窗口背景色
dwm.normbgcolor: #0d1416
! 普通窗口边框色
dwm.normbordercolor: #1a2529
! 普通窗口前景色(文字)
dwm.normfgcolor: #2a3539
! 选中窗口前景色(文字)
dwm.selfgcolor: #c5d9dc
! 选中窗口边框色
dwm.selbordercolor: #60DEEC
! 选中窗口背景色
dwm.selbgcolor: #0d1416
! 强调色(如标签有窗口时的颜色)
dwm.accentcolor: #60DEEC
! 标签下划线颜色
dwm.underlinecolor: #ad8ee6

! 窗口设置
! 窗口边框像素宽度
dwm.borderpx: 2
! 窗口吸附距离(像素)
dwm.snap: 32
! 是否显示状态栏 (1:显示, 0:隐藏)
dwm.showbar: 1
! 状态栏位置 (1:顶部, 0:底部)
dwm.topbar: 1
! 主区域窗口数量
dwm.nmaster: 1
! 是否尊重窗口大小提示 (1:是, 0:否)
dwm.resizehints: 0
! 主区域大小比例 (0.05 - 0.95)
dwm.mfact: 0.55

! 间距设置 (VanityGaps)
! 窗口水平内边距
dwm.gappih: 6
! 窗口垂直内边距
dwm.gappiv: 4
! 窗口水平外边距
dwm.gappoh: 4
! 窗口垂直外边距
dwm.gappov: 4
! 智能间距 (1:只有一个窗口时不显示间距, 0:始终显示)
dwm.smartgaps: 0

! 状态栏外观
! 状态栏高度 (0:自动计算)
dwm.barheight: 30
! 标签下划线高度
dwm.tagunderlineheight: 2
! 标签下划线水平内边距
dwm.tagunderlinepad: 4

! 系统托盘设置
! 托盘固定显示器 (0:跟随焦点, >0:固定在显示器X)
dwm.systraypinning: 0
! 托盘位置 (0:右侧, >0:左侧)
dwm.systrayonleft: 0
! 托盘固定失败策略 (1:首个显示器, 0:末尾显示器)
dwm.systraypinningfailfirst: 1
! 托盘图标间距
dwm.systrayspacing: 2
! 托盘图标大小
dwm.systrayiconsize: 16
! 是否显示系统托盘 (1:显示, 0:隐藏)
dwm.showsystray: 1

! 其他行为
! 聚焦平铺窗口是否置顶 (1:是, 0:否)
dwm.focusedontoptiled: 1
! 鼠标悬停聚焦 (1:是, 0:否)
dwm.focusonhover: 0
